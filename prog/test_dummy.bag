#definition DUMMY_ADDR (9221)
#definition CALL_STACK_ADDR_START (8192)
#definition CALL_STACK_ADDR_END (9215)
#definition UNKNOW_ADDR (9216)

entier a = 100;
entier b;
entier delay;

tant_que (1 < 2)

	// Increment a
	a = a + 1;

	// Read and write
	ecrire_a(a, DUMMY_ADDR);
	b = lire_a(DUMMY_ADDR);

	// Show result
	afficher_LCD(b);

	// Make a little delay between write/read
	delay = 0;
	tant_que (delay < 1500000)
		delay = delay + 1;
	fin_tant_que;

fin_tant_que;